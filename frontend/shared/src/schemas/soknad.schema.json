{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ekspertbistand",
  "type": "object",
  "properties": {
    "virksomhet": {
      "type": "object",
      "properties": {
        "virksomhetsnummer": { "type": "string" },
        "virksomhetsnavn": { "type": "string" },
        "kontaktperson": {
          "type": "object",
          "properties": {
            "navn": { "type": "string" },
            "epost": { "type": "string" },
            "telefonnummer": { "type": "string" }
          },
          "required": ["navn", "epost", "telefonnummer"]
        }
      },
      "required": ["virksomhetsnummer", "virksomhetsnavn", "kontaktperson"]
    },
    "ansatt": {
      "type": "object",
      "properties": {
        "fnr": { "type": "string" },
        "navn": { "type": "string" }
      },
      "required": ["fnr", "navn"]
    },
    "ekspert": {
      "type": "object",
      "properties": {
        "navn": { "type": "string" },
        "virksomhet": { "type": "string" },
        "kompetanse": { "type": "string" }
      },
      "required": ["navn", "virksomhet", "kompetanse"]
    },
    "behovForBistand": {
      "type": "object",
      "properties": {
        "begrunnelse": { "type": "string" },
        "behov": { "type": "string" },
        "timer": { "type": "number" },
        "estimertKostnad": { "type": "number" },
        "tilrettelegging": { "type": "string" },
        "startdato": { "type": "string", "format": "date" }
      },
      "required": [
        "begrunnelse",
        "behov",
        "timer",
        "estimertKostnad",
        "tilrettelegging",
        "startdato"
      ]
    },
    "nav": {
      "type": "object",
      "properties": {
        "kontaktperson": { "type": "string" }
      },
      "required": ["kontaktperson"]
    }
  },
  "required": ["virksomhet", "ansatt", "ekspert", "behovForBistand", "nav"],
  "example": {
    "virksomhet": {
      "virksomhetsnummer": "211511052",
      "virksomhetsnavn": "LOLPATROL",
      "kontaktperson": {
        "navn": "Ola Nordmann",
        "epost": "ola.nordmann@firma.no",
        "telefonnummer": "+47 99881337"
      }
    },
    "ansatt": {
      "fnr": "12058512345",
      "navn": "Kari Nordmann"
    },
    "ekspert": {
      "navn": "Ekspert NN",
      "virksomhet": "ErgoConsult AS",
      "kompetanse": "Ergoterapeut, autorisasjon HPR 1337"
    },
    "behovForBistand": {
      "begrunnelse": "Langvarig skulderplage med 50% sykefravær",
      "behov": "Arbeidsplassvurdering og ergonomisk veiledning",
      "timer": 16,
      "estimertKostnad": 9000,
      "tilrettelegging": "Høydejustert bord testet, noe bedring",
      "startdato": "2025-11-15"
    },
    "nav": {
      "kontaktperson": "Sakbehandler NN"
    }
  }
}
